<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/script_item_background"
    android:layout_margin="2dp">

    <!--  <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_dark"
            android:textSize="17dp"
            android:text="Script: &lt;placeholder>"
            android:id="@+id/script_col_name_lbl"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:paddingLeft="15px" />


        <View style="@style/HorizontalRule" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="@drawable/wallpaper_repeat_pale">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/light_dark"
                android:id="@+id/script_col_comment"
                android:layout_gravity="left"
                android:typeface="monospace"
                android:paddingLeft="20px"
                android:paddingTop="20px" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>