<resources>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/spearmint</item>
        <item name="colorPrimaryDark">@color/spearmint_dark</item>
        <item name="colorAccent">@color/highlight</item>
        <item name="android:backgroundStacked">@color/spearmint_dark</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Spearminty</item>

        <!-- Support library compatibility -->
        <item name="backgroundStacked">@color/spearmint_dark</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Spearminty</item>
    </style>

    <style name="ActionBarTabStyle.Spearminty" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_spearminty</item>
        <item name="background">@drawable/tab_indicator_ab_spearminty</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="HorizontalRule">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/horizontal_rule</item>
    </style>

    <style name="JobAddEditLabel">
        <item name="android:textColor">@color/spearmint_dark</item>
    </style>

    <style name="PaddedHorizontalRule" parent="HorizontalRule">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>
