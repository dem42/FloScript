<resources>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/spearmint</item>
        <item name="colorPrimaryDark">@color/spearmint_dark</item>
        <item name="colorAccent">@color/highlight</item>
    </style>

    <!-- Base application theme. It is linked in the manifest file -->
    <!-- the theme applied to the application or activity -->
    <style name="AppTheme2" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/spearmint</item>

        <!-- Support library compatibility -->
        <item name="background">@color/spearmint</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
